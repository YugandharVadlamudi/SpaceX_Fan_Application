<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spacexfanapplication">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpaceXFanApplication">
        <activity android:name=".MainActivity"></activity>

        <activity
            android:name="com.example.spacexfanapplication.ui.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.spacexfanapplication.ui.login.SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>
        <activity android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>
        <activity android:name=".ui.home.launchDetails.LaunchDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>
    </application>

</manifest>